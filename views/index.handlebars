<div class="container-fluid">

  <div class="jumbotron jumbotron-fluid ">
    <div class=" container rounded border border-dark">
      <h1 class="text-center">Eat a Burger!</h1>
      <img class= "rounded mx-auto d-block" src="assets/images/burger.jpg"/>
    </div>
  </div>
  {{!-- <h1>Eat a Burger!</h1> --}}

  <div class="row">
    <div class="col-md-6">
      <h3 class="text-center">Ready to eat Burgers!</h3>

      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h3 class="text-center">Devour!</h3>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row justify-content-center">

      <h2>Add a Burger</h2>
      <form class="create-form ">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="eaten">Eaten?</label><br>
          <input type="radio" name="eaten" value="1" checked> Devour<br>
          <input type="radio" name="eaten" value="0"> Ready to eat Burgers
        </div>

        <button class="btn btn-info" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>